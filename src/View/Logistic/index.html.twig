{% extends 'layout.html.twig' %}

{% block content %}
	<div class="main-container">
		<h1>Logistics</h1>
		<form action="" method="POST">
			<label form="number">Number of cupcakes</label>
			<input type="number" name="cupcakeNumber" id="number">
			<button>Inbox</button>
		</form>

		<h2>Results </h2>
		<ul class="results">
			<li>Number of S boxes: {{ packages[2] }}</li>
			<li>Number of M boxes: {{ packages[1] }}</li>
			<li>Number of L boxes: {{ packages[0] }}</li>
		</ul>
	</div>
{% endblock %}
